# Usage
# make -f 0-Makefile

# Define phony rules
.PHONY = all clear clean cls
CC := gcc
SRC := school.c

# Below produces executable
all: school

school: school.o main.o
	@${CC} school.o main.o -o school

school.o: ${SRC} m.h
	@${CC} ${SRC} -Wall -Wextra -pedantic -Werror -std=gnu89 -g -c school.o

main.o: main.c m.h
	@${CC} main.c -Wall -Wextra -pedantic -Werror -std=gnu89 -g -c main.o

clean:
	@rm -rvf *.o school

clear: clean # Alias

cls: clean # Alias
