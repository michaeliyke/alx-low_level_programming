# Usage
# make -f 0-Makefile

# Define phony rules
.PHONY = all clear clean cls
CC := gcc
SRC := school.c main.c # Put your files here $(wildcard *.h)

# Below produces executable
all: ${SRC} # @ sign below supresses the actual command from showing
	@${CC} ${SRC} -o school

clean:
	@rm -rvf *.o school

clear: clean # Alias

cls: clean # Alias
